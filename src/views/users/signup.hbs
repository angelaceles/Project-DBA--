<div class="row">
    <div class="col-md-5 mx-auto">
        <div class="card">
            <div class="card-body">
                 <form action="/users/signup" method="post" class="form">
                    <div class="">
                        <h2 class="title-card">Account register</h2>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control input-sign" name="name" placeholder="Name" value="{{name}}">
                    </div>
                    <br>
                    <div class="form-group">
                        <input type="email" class="form-control input-sign" name="email" placeholder="Email" value="{{email}}">
                    </div>
                    <br>
                    <div class="form-group">
                        <input type="password" class="form-control input-sign" name="password" placeholder="Password" value="{{password}}">
                    </div>
                    <br>
                    <div class="form-group">
                        <input type="password" class="form-control input-sign" name="confirm_password" placeholder="Password" value="{{confirm_password}}">
                    </div>
                    <br>
                    <div class="form-group">
                        <button type="submit" class="sign-button">
                            Sign Up
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>