<h3 class="text-center m-5"> Manage your tasks or notes </h3>
    <div class="row">
        <div class="col">
            <div class="table-responsive sc2" style="height:20rem; overflow:auto;">
             <table class="table  table-dark table-striped">
                <thead>
                        <th>ID</th>
                        <th>Date</th>
                        <th>Lesson</th>
                        <th>Titulo</th>
                        <th>Estado</th>
                        <th>Acciones</th>
         
                </thead>
                <tbody>
                    {{#each notes}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{fecha}}</td>
                        <td>{{curso}}</td>
                        <td>{{titulo}}</td>
                        <td>{{estado}}</td>
                        <td class="p-3" style="width: 15%">
                            <div class="row">
                                <div class="col-4 col-md-6">
                                    <form action="/notes/delete/{{id}}?_method=DELETE" method="POST">
                                    <input  type="hidden" name="_method" value="DELETE">
                                    <button  type="submit" target="click" onclick="return confirm('Are you sure to delete the note permanently?')"alt="">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                    </form>
                                </div>
                                <div class="col-4 col-md-6">
                                    <a href="/notes/show-note/{{id}}"><i class="fas fa-eye"></i></a>
                                </div>
                            </div>
                        </td>
                    </tr>
                    {{else}}
                    <div class="card mx-auto m-3">
                        <div class="card-body">
                            <p class="lead text-dark">You don't have any note records so far, please add one :D</p>
                            <a href="/notes/add" class="btn btn-success btn-block">Create one</a>
                        </div>
                    </div>
                    <br>
                    {{/each}}
                </tbody>
            </table>

            </div>
        </div>
    </div>
    <br>